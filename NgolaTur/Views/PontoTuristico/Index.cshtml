@model IEnumerable<NgolaTur.Models.PontoTuristico>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/Admin/_Layout.cshtml";
}

<h1>Lista de pontos turísticos</h1>

<p>
    <a asp-action="Create">Adicionar novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NomePontoTuristico)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdCidade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdTipoPontoTuristico)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NomePontoTuristico)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdCidade)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdTipoPontoTuristico)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Detalhes</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
