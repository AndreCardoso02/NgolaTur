@model NgolaTur.Models.Hotel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/Admin/_Layout.cshtml";
}

<h1>Editar</h1>

<h4>Hotel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="NomeHotel" class="control-label"></label>
                <input asp-for="NomeHotel" class="form-control" />
                <span asp-validation-for="NomeHotel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EstadoHotel" class="control-label"></label>
                <input asp-for="EstadoHotel" class="form-control" />
                <span asp-validation-for="EstadoHotel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdCidade" class="control-label"></label>
                <select asp-for="IdCidade" class="form-control"
                        asp-items="@ViewBag.IdCidade"></select>
                <span asp-validation-for="IdCidade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdClassificacaoHotel" class="control-label"></label>
                <select asp-for="IdClassificacaoHotel" class="form-control"
                        asp-items="@ViewBag.IdClassificacaoHotel"></select>
                <span asp-validation-for="IdClassificacaoHotel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumeroDeQuartos" class="control-label"></label>
                <input asp-for="NumeroDeQuartos" class="form-control" />
                <span asp-validation-for="NumeroDeQuartos" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


<div>
    <a asp-action="Index">Retornar a listagem</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
