<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!--Parte do Template-->
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@100;200;300;400;500;600;700;800;900&display=swap" rel="stylesheet">

    <title>@ViewData["Title"] - NgolaTur</title>
    @*<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/css/site.css" />*@

    <!--Parte do template-->
    <!-- Bootstrap core CSS -->
    <link href="~/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <!-- Additional CSS Files -->
    <link rel="stylesheet" href="~/assets/css/fontawesome.css">
    <link rel="stylesheet" href="~/assets/css/templatemo-plot-listing.css">
    <link rel="stylesheet" href="~/assets/css/animated.css">
    <link rel="stylesheet" href="~/assets/css/owl.css">

</head>
<body>

    <!-- ***** Preloader Start ***** -->
    <div id="js-preloader" class="js-preloader">
        <div class="preloader-inner">
            <span class="dot"></span>
            <div class="dots">
                <span></span>
                <span></span>
                <span></span>
            </div>
        </div>
    </div>
    <!-- ***** Preloader End ***** -->
    <!-- ***** Header Area Start ***** -->

    <header class="header-area header-sticky wow slideInDown" data-wow-duration="0.75s" data-wow-delay="0s">
        <div class="container">
            <div class="row">
                <div class="col-md-12">

                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <nav class="main-nav">
                        <!-- ***** Logo Start ***** -->
                        <a  asp-area="" asp-controller="Home" asp-action="Index" class="logo">
                        </a>
                        <!-- ***** Logo End ***** -->
                        <!-- ***** Menu Start ***** -->
                        <ul class="nav">
                            <li><a asp-area="" asp-controller="Home" asp-action="Index" class="active">Home</a></li>
                            <li><a href="#">Pontos turisticos</a></li>
                            <li><a href="#">Hoteis</a></li>
                            <li><a href="#">Restaurantes</a></li>
                            <li><a asp-area="" asp-controller="Home" asp-action="Privacy">Contacte-nos</a></li>
                            <li><div class="main-white-button"><a href="#" class="text-black"><i class="fa fa-plus"></i> Efectuar reserva</a></div></li>
                            <partial name="_LoginPartial" />
                        </ul>                    
                        <a class='menu-trigger'>
                            <span>Menu</span>
                        </a>
                        <!-- ***** Menu End ***** -->
                    </nav>
                </div>
            </div>
        </div>
    </header>
    <!-- ***** Header Area End ***** -->

    @RenderBody()

    <footer>
        <div class="container">
            <div class="row">
                <div class="col-lg-4">
                    <div class="about">
                        <div class="logo">
                            <img src="~/assets/images/ngolaturlogo.png" alt="Plot Listing">
                        </div>
                        <p>Aproveite os melhores momentos de sua vida. <a rel="nofollow" href="#" target="_blank">NgolaTur</a> a melhor escolha.</p>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="helpful-links">
                        <h4>Helpful Links</h4>
                        <div class="row">
                            <div class="col-lg-6 col-sm-6">
                                <ul>
                                    <li><a href="#">Cidades</a></li>
                                    <li><a href="#">Hoteis</a></li>
                                    <li><a href="#">Pontos Turísticos</a></li>
                                    <li><a href="#">Restaurantes</a></li>
                                    <li><a href="#">Contacte-nos</a></li>
                                </ul>
                            </div>
                            <div class="col-lg-6">
                                <ul>
                                    <li><a href="#">Sobre nós</a></li>
                                    <li><a href="#">Onde estamos</a></li>
                                    <li><a href="#">O que dizem de nós</a></li>
                                    <li><a href="#">Políticas de privacidade</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="contact-us">
                        <h4>Contacte nos</h4>
                        <p>Utanga, curso de engenharia informática 3º ano</p>
                        <div class="row">
                            <div class="col-lg-6">
                                <a href="#">999-999-999</a>
                            </div>
                            <div class="col-lg-6">
                                <a href="#">999-999-999</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-12">
                    <div class="sub-footer">
                        <p>
                            Copyright © 2023 Utanga Co., Ltd. Todos os direitos reservados.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </footer>


    @*<script src="~/lib/jquery/dist/jquery.min.js"></script>*@
    @*<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>*@
    @*<script src="~/js/site.js" asp-append-version="true"></script>*@
    @RenderSection("Scripts", required: false)

    <!--Template-->
    <!-- Scripts -->
    <script src="~/vendor/jquery/jquery.min.js"></script>
    <script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/assets/js/owl-carousel.js"></script>
    <script src="~/assets/js/animation.js"></script>
    <script src="~/assets/js/imagesloaded.js"></script>
    <script src="~/assets/js/custom.js"></script>
</body>
</html>
